<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.TrackDetailActivity"
    tools:showIn="@layout/activity_track_detail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageArtWork"
            android:transitionName="artWork"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/image_list_placeholder"
            android:background="@android:color/transparent"
            android:outlineProvider="none"
            android:elevation="@dimen/_6sdp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_10sdp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:text="Music Video"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_light"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/layoutDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layoutTitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/textLastVisited"
                        android:transitionName="trackGenre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:gravity="end"
                        android:layout_gravity="bottom"
                        android:text="Last Viewed: Aug 19, 2019"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/montserrat_thin"/>

                    <TextView
                        android:id="@+id/textTrackName"
                        android:transitionName="trackTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Moonlight"
                        android:fontFamily="@font/montserrat_black"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textTrackArtist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="George Lucas"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/montserrat_light"/>

                    <TextView
                        android:id="@+id/textPrice"
                        android:transitionName="trackPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="USD 19.99"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/montserrat_light"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textGenre"
                    android:transitionName="trackGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="Action &amp; Adventure"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/montserrat_semi_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutTitle"/>

                <TextView
                    android:id="@+id/textDescription"
                    android:transitionName="trackGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_15sdp"
                    android:text="@string/track_default_description"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/montserrat_thin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textGenre"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>